<Window x:Class="projet_location.View.FenetreGenererPdfBail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projet_location.View"
        mc:Ignorable="d"
        xmlns:res="clr-namespace:projet_location.Model.Res"
        Title="{x:Static res:Strings.GenererPdfBail}" Height="500" Width="500">
    <Grid Background="#E8FDE0">
        <Label Content="{x:Static res:Strings.TitrePdf}" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nomFichier" HorizontalAlignment="Center" Margin="0,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="19" Width="160"/>

        <Label Content="{x:Static res:Strings.Chemin}" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top"/>
        <TextBox Name="CheminAcces"  HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="21" Width="160"/>
        <Button Content="{x:Static res:Strings.Parcourir}" HorizontalAlignment="Left" Margin="369,134,0,0" VerticalAlignment="Top" Click="ParcourirDossier_Click" Height="21"/>

        <Button Content="{x:Static res:Strings.GenererPdfBail}" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Height="138" Width="390" Click="GenererPdfBail" Style="{StaticResource BasicButton}"/>

    </Grid>
</Window>
